@page "/access-denied"
@inject NavigationManager Navigation

<PageTitle>403 - Access Denied</PageTitle>

<div class="container text-center mt-5">
    <h1 class="text-danger">401 - Access Denied</h1>

    <p class="lead mt-3">
        You do not have permission to view this page.
    </p>

    <div class="mt-4">
        <button class="btn btn-primary me-2" @onclick="GoHome">
            Return to Home
        </button>

        <button class="btn btn-outline-secondary" @onclick="GoToLogin">
            Go to Login
        </button>
    </div>
</div>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    private void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}